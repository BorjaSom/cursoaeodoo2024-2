<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="veterinary_appointment_view_tree" model="ir.ui.view">
        <field name="name">veterinary_appointment.view.tree</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Appointments">
                <header>
                    <button string="All to draft" name="action_all_draft" type="object" class="btn-info"/>
                    <button string="All done" name="action_all_done" type="object" class="btn-success"/>
                    <button string="All cancelled" name="action_all_cancelled" type="object" class="btn-danger"/>
                    <button string="All other status" name="action_all_other" type="object" class="btn-warning"/>
                </header>
                <field name="sequence" widget="handle"/>
                <field name="name" />
                <field name="date" optional="show"/>
                <field name="urgency" widget="boolean_toggle" optional="show"/>
                <field name="user_id" optional="show"/>
                <field name="status" widget="badge" optional="show"/>
                <field name="duration_minutes" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="veterinary_appointment_view_form" model="ir.ui.view">
        <field name="name">veterinary_appointment.view.form</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <header>
                    <field name="status" options="{'clickable':1}" widget="statusbar"/>
                    <button string="Back to draft" invisible="status in ('draft')" name="action_draft" type="object" class="btn-info"/>
                    <button string="Done" invisible="status in ('done', 'cancelled')" name="action_done" type="object" class="btn-success"/>
                    <button string="Cancelled" invisible="status in ('cancelled')" name="action_cancelled" type="object" class="btn-danger"/>
                    <button string="Set other status" invisible="status in ('other')" name="action_other" type="object" class="btn-warning"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" />
                            <field name="user_id" />
                        </group>
                        <group>
                            <field name="duration_minutes" />                           
                        </group>                       
                    </group>
                    <notebook>
                        <page name="reason_page" string="Reason">
                            <field name="reason" /> 
                        </page>
                         <page name="solution_page" string="Solution">
                            <field name="solution" /> 
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="veterinary_appointment_action" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="res_model">veterinary.appointment</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new Appointment
        </p>
        </field>
    </record>
     <menuitem
        id="veterinary_appointment_menu"
        name="Appointment"
        action="veterinary_appointment_action"
        parent="veterinary_management_menu"
        sequence="20"/>
</odoo>